-----#1----

DELIMITER
    $$
CREATE PROCEDURE p_get_office_by_country(IN countryName VARCHAR(255))
BEGIN
    SELECT
        *
    FROM
        offices
    WHERE
        country = countryName ;
END $$
DELIMITER
    ;

----#2----

DELIMITER
    $$
CREATE PROCEDURE p_get_total_order(IN customerID INT)
BEGIN
    SELECT
        customerNumber,
        SUM(amount) AS total_order
    FROM
        orders
    WHERE
        customerNumber = customerID
    GROUP BY
        customerNumber ;
END $$
DELIMITER
    ;
